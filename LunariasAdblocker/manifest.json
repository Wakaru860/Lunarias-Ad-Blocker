{
  "manifest_version": 3,
  "name": "Lunaria's Ad Blocker",
  "version": "1.0",
  "description": "Blocks basic ads on websites",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
